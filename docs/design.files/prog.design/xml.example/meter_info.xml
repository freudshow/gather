		<sadd>0001</sadd>
		<oadd>5001</oadd>
		<func_type>meter_info</func_type>
		<oper_type>read</oper_type>
	</common>
	<!-- 可选参数trans, 用来进行错误重连时, 具体要第几帧的数据 -->
	<trans>
		<frame_idx>1</frame_idx><!--要查询的帧的索引 -->
	</trans>
</root>

